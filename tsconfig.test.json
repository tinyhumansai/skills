{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": ".",
    "rootDir": ".",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "declaration": false,
    "declarationMap": false
  },
  "include": ["types/**/*.d.ts", "src/*/index.ts"],
  "exclude": ["node_modules", ".venv", "src/*/__tests__/**/*.ts"]
}
