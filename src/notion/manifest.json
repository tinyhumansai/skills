{
  "id": "notion",
  "name": "Notion",
  "runtime": "quickjs",
  "entry": "index.js",
  "version": "1.0.0",
  "description": "Notion workspace integration â€” 22 tools for pages, databases, blocks, users, comments, and search.",
  "auto_start": false,
  "platforms": ["windows", "macos", "linux", "android", "ios"],
  "setup": {
    "required": true,
    "label": "Connect Notion",
    "oauth": { "provider": "notion", "scopes": [], "apiBaseUrl": "https://api.notion.com/v1" }
  },
  "entity_schema": {
    "entity_types": [
      {
        "type": "notion.page",
        "label": "Notion Page",
        "description": "A page in a Notion workspace.",
        "properties": [
          { "name": "url", "type": "string", "description": "Page URL" },
          {
            "name": "icon",
            "type": "string",
            "description": "Page icon (emoji or URL)",
            "optional": true
          },
          {
            "name": "last_edited_time",
            "type": "string",
            "description": "ISO 8601 last edited timestamp"
          },
          {
            "name": "created_time",
            "type": "string",
            "description": "ISO 8601 creation timestamp"
          },
          { "name": "archived", "type": "boolean", "description": "Whether the page is archived" },
          {
            "name": "parent_type",
            "type": "string",
            "description": "Parent type: page_id, database_id, or workspace"
          }
        ]
      },
      {
        "type": "notion.database",
        "label": "Notion Database",
        "description": "A database in a Notion workspace.",
        "properties": [
          { "name": "url", "type": "string", "description": "Database URL" },
          {
            "name": "description",
            "type": "string",
            "description": "Database description",
            "optional": true
          },
          {
            "name": "icon",
            "type": "string",
            "description": "Database icon (emoji or URL)",
            "optional": true
          },
          {
            "name": "last_edited_time",
            "type": "string",
            "description": "ISO 8601 last edited timestamp"
          },
          {
            "name": "created_time",
            "type": "string",
            "description": "ISO 8601 creation timestamp"
          },
          {
            "name": "archived",
            "type": "boolean",
            "description": "Whether the database is archived"
          },
          {
            "name": "property_count",
            "type": "number",
            "description": "Number of properties in the schema"
          }
        ]
      },
      {
        "type": "notion.user",
        "label": "Notion User",
        "description": "A user in the Notion workspace.",
        "properties": [
          { "name": "user_type", "type": "string", "description": "User type: person or bot" },
          {
            "name": "email",
            "type": "string",
            "description": "User email address",
            "optional": true
          },
          {
            "name": "avatar_url",
            "type": "string",
            "description": "User avatar URL",
            "optional": true
          }
        ]
      }
    ],
    "relationship_types": [
      {
        "type": "child_of",
        "source_type": "notion.page",
        "target_type": "notion.page",
        "description": "Page is a child of another page.",
        "cardinality": "many_to_one"
      },
      {
        "type": "entry_in",
        "source_type": "notion.page",
        "target_type": "notion.database",
        "description": "Page is an entry in a database.",
        "cardinality": "many_to_one"
      },
      {
        "type": "created_by",
        "source_type": "notion.page",
        "target_type": "notion.user",
        "description": "Page was created by this user.",
        "cardinality": "many_to_one"
      },
      {
        "type": "last_edited_by",
        "source_type": "notion.page",
        "target_type": "notion.user",
        "description": "Page was last edited by this user.",
        "cardinality": "many_to_one"
      }
    ]
  }
}
