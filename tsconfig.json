{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "outDir": ".",
    "rootDir": ".",
    "declaration": false,
    "sourceMap": false,
    "noEmit": true,
    "strict": true,
    "alwaysStrict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  },
  "include": ["types/**/*.d.ts", "src/types.d.ts", "src/*/index.ts", "examples/*/index.ts"],
  "exclude": ["node_modules", ".venv", "dev"]
}
