{
  "id": "slack",
  "name": "Slack",
  "version": "1.0.0",
  "description": "Slack workspace integration â€” send messages, manage channels, search conversations, and interact with Slack workspaces.",
  "runtime": "python",
  "entry": "__main__.py",
  "tick_interval": 300000,
  "env": [],
  "dependencies": ["aiohttp>=3.9.0", "pydantic>=2.0", "aiosqlite>=0.20.0"],
  "setup": { "required": true, "label": "Connect Slack" },
  "entity_schema": {
    "entity_types": [
      {
        "type": "slack.workspace",
        "label": "Slack Workspace",
        "description": "A Slack workspace/team.",
        "properties": [
          { "name": "name", "type": "string", "description": "Workspace name" },
          {
            "name": "domain",
            "type": "string",
            "description": "Workspace domain",
            "optional": true
          },
          { "name": "id", "type": "string", "description": "Workspace ID" }
        ]
      },
      {
        "type": "slack.channel",
        "label": "Slack Channel",
        "description": "A Slack channel (public or private).",
        "properties": [
          { "name": "name", "type": "string", "description": "Channel name" },
          {
            "name": "is_private",
            "type": "boolean",
            "description": "Whether the channel is private"
          },
          {
            "name": "is_archived",
            "type": "boolean",
            "description": "Whether the channel is archived"
          },
          {
            "name": "member_count",
            "type": "number",
            "description": "Number of members",
            "optional": true
          },
          { "name": "topic", "type": "string", "description": "Channel topic", "optional": true },
          {
            "name": "purpose",
            "type": "string",
            "description": "Channel purpose",
            "optional": true
          }
        ]
      },
      {
        "type": "slack.dm",
        "label": "Slack DM",
        "description": "A direct message conversation.",
        "properties": [
          { "name": "user_id", "type": "string", "description": "The other user's ID" },
          { "name": "unread_count", "type": "number", "description": "Unread message count" }
        ]
      },
      {
        "type": "slack.user",
        "label": "Slack User",
        "description": "A Slack user.",
        "properties": [
          { "name": "name", "type": "string", "description": "Display name" },
          { "name": "real_name", "type": "string", "description": "Real name", "optional": true },
          { "name": "email", "type": "string", "description": "Email address", "optional": true },
          { "name": "is_bot", "type": "boolean", "description": "Whether this user is a bot" },
          {
            "name": "is_admin",
            "type": "boolean",
            "description": "Whether this user is an admin",
            "optional": true
          }
        ]
      }
    ],
    "relationship_types": [
      {
        "type": "member_of",
        "source_type": "slack.user",
        "target_type": "slack.channel",
        "description": "User is a member of this channel.",
        "cardinality": "many_to_many"
      },
      {
        "type": "dm_with",
        "source_type": "slack.dm",
        "target_type": "slack.user",
        "description": "DM conversation is with this user.",
        "cardinality": "one_to_one"
      },
      {
        "type": "in_workspace",
        "source_type": "slack.channel",
        "target_type": "slack.workspace",
        "description": "Channel belongs to this workspace.",
        "cardinality": "many_to_one"
      },
      {
        "type": "in_workspace",
        "source_type": "slack.user",
        "target_type": "slack.workspace",
        "description": "User belongs to this workspace.",
        "cardinality": "many_to_one"
      }
    ]
  }
}
