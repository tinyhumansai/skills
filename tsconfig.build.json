{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./skills-ts-out",
    "rootDir": "./src",
    "noEmit": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true
  },
  "include": ["types/**/*.d.ts", "src/*/index.ts"],
  "exclude": ["node_modules", ".venv"]
}
